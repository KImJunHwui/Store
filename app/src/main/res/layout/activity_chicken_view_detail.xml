<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ChickenViewDetailActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chickenDetailUrlImg"
        android:layout_gravity="center"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="치킨가게 이름"/>

    <TextView
        android:id="@+id/chickenDetailNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="실제가게 이름"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="치킨가게 번호"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/chickenDetailNumTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="실제가게 번호"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/chickenDetailBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전화 걸기"/>



    </LinearLayout>






</LinearLayout>